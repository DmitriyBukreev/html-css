{
  "name": "tasks-htmlcss",
  "version": "1.0.0",
  "description": "Course Materials",
  "browserslist": [
    "last 3 versions"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --no-warnings --ignore=node_modules/** **/*.test.js",
    "build": "npx postcss ./src/main.scss -o ./assets/css/main.css",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{html,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.scss": "stylelint --fix",
    "*.{js,scss,md}": "prettier --write"
  },
  "keywords": [],
  "author": "Sergey Zelenov",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "cssnano": "^5.1.15",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mocha": "^7.1.2",
    "postcss": "^8.4.21",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-scss": "^4.0.6",
    "prettier": "2.8.4",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1"
  }
}
